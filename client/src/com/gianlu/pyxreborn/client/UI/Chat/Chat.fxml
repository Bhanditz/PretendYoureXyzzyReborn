<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8">
    <children>
        <ListView fx:id="chat" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
        <HBox VBox.vgrow="NEVER">
            <children>
                <TextField fx:id="message" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </TextField>
                <Button mnemonicParsing="false" onMouseClicked="#send" text="Send"/>
            </children>
            <padding>
                <Insets top="10.0"/>
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
