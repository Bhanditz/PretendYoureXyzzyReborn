<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" xmlns="http://javafx.com/javafx/8">
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Label text="Max players:">
                    <HBox.margin>
                        <Insets right="5.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="maxPlayers" HBox.hgrow="ALWAYS"/>
            </children>
            <padding>
                <Insets bottom="5.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Label text="Max spectators:">
                    <HBox.margin>
                        <Insets right="5.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="maxSpectators" HBox.hgrow="ALWAYS"/>
            </children>
            <padding>
                <Insets bottom="5.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Label text="Card sets:">
                    <HBox.margin>
                        <Insets right="5.0"/>
                    </HBox.margin>
                </Label>
                <ListView fx:id="cardSets" prefHeight="100.0" HBox.hgrow="ALWAYS"/>
            </children>
            <padding>
                <Insets bottom="5.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="apply" defaultButton="true" mnemonicParsing="false" onMouseClicked="#apply"
                        text="Apply"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
