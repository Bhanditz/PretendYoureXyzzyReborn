<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="220.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8">
    <children>
        <Label alignment="CENTER" text="Pretend You're Xyzzy&#10;Reborn" textAlignment="CENTER" VBox.vgrow="ALWAYS">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </Label>
        <TextField fx:id="address" promptText="Server address">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </TextField>
        <TextField fx:id="nickname" promptText="Nickname">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </TextField>
        <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
            <children>
                <CheckBox fx:id="admin" mnemonicParsing="false" onMouseClicked="#adminCheckedChanged" text="Admin">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                </CheckBox>
                <TextField fx:id="adminCode" opacity="0.0" promptText="Admin code" HBox.hgrow="ALWAYS"/>
            </children>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </HBox>
        <Button alignment="CENTER" defaultButton="true" mnemonicParsing="false" onMouseClicked="#register"
                text="Register"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
